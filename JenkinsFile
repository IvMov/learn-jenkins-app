pipeline {
    agent any

    environment{ 
        NETLIFY_SITE_ID = '85b3430b-2b9e-43ee-9331-f9a21332a405'
        // credentials is method to acces the credentials helper of jenkins
        NETLIFY_AUTH_TOKEN = credentials('netlify-tocken')
        REACT_APP_VERSION = "1.2.$BUILD_ID"
    }
    stages {

        stage("Docker build") {
            steps{
                sh "docker build -t jenkins-app-base-image ."
            }
        }
        stage('Build') {
            agent{
                        docker{
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
            steps {
                sh '''
                    echo 'node installed'
                    node --version
                    npm --version
                    # same as npm instal for cicd tools ? 
                    npm ci
                    npm run build
                '''
            }
        }

        stage ("Run Tests") {
            parallel {
                stage("Unit test") {
                    agent{
                        docker{
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps{ 
                        echo "start tests task"
                        sh '''
                            test -f build/index.html
                            npm run test
                        '''
                        echo "end tests task"
                    }
                    post {
                        always {
                            junit 'j-test-results/junit.xml'
                        }
                    }
                }
                stage("E2E") {
                    agent {
                        docker {
                            image 'jenkins-app-base-image'
                            reuseNode true
                        }
                    }
                    steps{ 
                        echo "start E2E"
                        sh '''
                            serve -s build
                            npx playwright test --reporter=html
                        '''
                        echo "end E2E"
                    }
                    post {
                        always {
                            publishHTML(
                                [
                                    allowMissing: false, 
                                    alwaysLinkToLastBuild: false, 
                                    keepAll: false, 
                                    reportDir: 'playwright-report', 
                                    reportFiles: 'index.html', 
                                    reportName: 'Playwright HTML Report Local', 
                                    reportTitles: '', 
                                    useWrapperFileDirectly: true
                                    ]
                                )
                        }
                    }
                }
            }
        }

        stage("Deploy Staging") {
            agent {
                docker {
                    image 'jenkins-app-base-image'
                    reuseNode true
                }
            }
            environment{
                CI_ENVIRONMENT_URL = "PLACEHOLDER"
            }
            steps{ 
                echo "start E2E for staging"
                sh ''' 
                    netlify deploy --dir=build --json > deploy-staging-output.json
                    CI_ENVIRONMENT_URL=$(node-jq -r '.deploy_url' deploy-staging-output.json)
                    npx playwright test --reporter=html
                '''
                echo "end E2E staging"
            }
            post {
                always {
                    publishHTML(
                        [
                            allowMissing: false, 
                            alwaysLinkToLastBuild: false, 
                            keepAll: false, 
                            reportDir: 'playwright-report', 
                            reportFiles: 'index.html', 
                            reportName: 'Playwright HTML Report Stage', 
                            reportTitles: '', 
                            useWrapperFileDirectly: true
                            ]
                        )
                }
            }
        }

        stage("Deploy Prod") {
            agent {
                docker {
                    image 'jenkins-app-base-image'
                    reuseNode true
                }
            }
            environment{
                CI_ENVIRONMENT_URL = 'https://jovial-medovik-88a854.netlify.app'
            }
            steps{ 
                echo "start E2E"
                sh '''
                    netlify deploy --dir=build --prod
                    npx playwright test --reporter=html
                '''
                echo "end E2E"
            }
            post {
                always {
                    publishHTML(
                        [
                            allowMissing: false, 
                            alwaysLinkToLastBuild: false, 
                            keepAll: false, 
                            reportDir: 'playwright-report', 
                            reportFiles: 'index.html', 
                            reportName: 'Playwright HTML Report Prod', 
                            reportTitles: '', 
                            useWrapperFileDirectly: true
                            ]
                        )
                }
            }
        }
    }
        
}
