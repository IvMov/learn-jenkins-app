pipeline {
    agent{
        docker{
            image 'node:18-alpine'
            reuseNode true
        }
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    echo 'node installed'
                    node --version
                    npm --version
                    # same as npm instal for cicd tools ? 
                    npm ci
                    npm run build
                '''
            }
        }
        stage("Test") {
            steps{ 
                echo "start tests task"
                sh '''
                    npm run test
                    test -f build/index.html
                '''
            
                echo "end tests task"
            }
        }
    }
}
