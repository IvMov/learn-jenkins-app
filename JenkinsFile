pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo 'node installed'
                    node --version
                    npm --version
                    # same as npm instal for cicd tools ? 
                    npm ci
                    npm run build
                '''
            }
        }
        stage("Test") {
            steps{ 
                echo "start tests task"
                npm run test
                echo "end tests task"
            }
        }
    }
}
